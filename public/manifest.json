{
	"_version": "1.5.0",
	"sap.app": {
		"id": "sortament",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}"
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_belize"

		]
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "sortament.main.view.App",
			"type": "XML"
		},
		"dependencies": {
			"minUI5Version": "1.30.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {}
			}
		},
		"contentDensities": {
			"compact": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "sortament.i18n.i18n"
				}
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "viewPath": "sortament.main.view",
        "controlId": "mainApp"
			},
			"routes": [
				{
          "pattern": "",
          "name": "beginSortament",
          "target": ["sortamentMaster", "empty"]
        },
        {
          "pattern": "detail/{sortPath}",
          "name": "selectedSortament",
          "target": ["sortamentMaster", "sortamentDetail"]
        }
			],
			"targets": {
				"sortamentMaster": {
          "viewPath": "sortament.sortaments.view",
          "viewName": "SortamentMaster",
          "viewId": "sortamentMaster",
          "controlAggregation": "masterPages"
        },
        "sortamentDetail": {
          "viewPath": "sortament.sortaments.view",
          "viewName": "SortamentDetail",
          "viewId": "sortamentDetail",
          "controlAggregation": "detailPages"
        },
        "empty": {
        	"viewPath": "sortament.main.view",
          "viewName": "Empty",
          "viewId": "empty",
          "controlAggregation": "detailPages"
        }
			}
		}
	}
}