<mvc:View 
  controllerName="sortament.sortaments.controller.SortamentMaster"
  xmlns:l="sap.ui.layout"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true">
  <Page>
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title
						text="Каталоги металлопроката"
						titleStyle="H4"
						level="H4"/>
				</contentMiddle>
			</Bar>
		</customHeader>
  	<subHeader>
			<Toolbar>
				<SearchField 
					liveChange="onSearchSortament"
					width="100%"/>
			</Toolbar>
		</subHeader>
		<content>
			<List
				id="sortamentList"
				items="{
					path: 'sortaments>/',
					sorter: {
				    path: 'category',
				    group: true
			    }
		  	}"
				selectionChange="onSelectSortament"
				mode="SingleSelectMaster"
				class="sortamentList">
				<items>
					<StandardListItem
						class="sortamentItem"
						tooltip="{sortaments>name}"
						title="{sortaments>name}"/>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://list"
					type="Transparent"
					tooltip="Открыть редактор параметров"
					press="onOpenParamsDialog"/>
				<ToolbarSeparator/>
				<Button
					icon="sap-icon://create-form"
					type="Transparent"
					tooltip="Создать сортамент"
					press="onNavToNewSortament"/>
			</Toolbar>
		</footer>
  </Page>
</mvc:View>