<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
	<Dialog
		id="sizeCatalogDialog"
		title="Выгрузка каталога типоразмеров"
		draggable="true"
		contentWidth="40rem">
		<content>
			<VBox class="sapUiTinyMarginTop">
				<HBox>
					<HBox width="40%">
						<u:FileUploader
							id="fileUploader"
							iconOnly="true"
							placeholder="Файл не выбран"
							icon="sap-icon://search"
							fileType="txt"
							name="myFileUpload"
							uploadUrl="api/uploadFile"
							tooltip="Выбрать файл"
							change="onChangeFile"
							uploadComplete="handleUploadComplete"
							class="sapUiTinyMarginEnd sapUiSmallMarginBegin"/>
						<Button
							tooltip="Загрузить каталог типоразмеров"
							icon="sap-icon://upload"
							press="handleUploadPress"/>
					</HBox>
					<HBox width="60%" justifyContent="End">
						<Button 
							icon="sap-icon://message-information" 
							type="Emphasized"
							press="handleMessagePopoverPress"
							class="sapUiSmallMarginEnd"/>
					</HBox>
				</HBox>
				<f:Form 
					id="SizeCatalogMeta"
					editable="true">
					<f:layout>
						<f:ResponsiveGridLayout
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="6"
							labelSpanS="6"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="0"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false" />
					</f:layout>
					<f:formContainers>
						<f:FormContainer formElements="{mCatalogSize>/headers}">
							<f:formElements>
								<f:FormElement label="{
									path: 'mCatalogSize>fileMeta',
									formatter: '.handleLabelFtr'
								}">
									<f:fields>
										<Select 
											forceSelection="false"
											autoAdjustWidth="true"
											selectedKey="{mCatalogSize>paramId}"
											items="{
												path: 'gSortaments>params',
												templateShareable: false
											}">
											<items>
												<core:Item text="{gSortaments>name}" key="{gSortaments>_id}"/>																						
											</items>
										</Select>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
			
		</content>
		<beginButton>
			<Button
				type="Emphasized"
				text="Выгрузить"
				press="onDownloadSizeCatalog"/>
		</beginButton>
		<endButton>
			<Button
				type="Reject"
				text="Закрыть"
				press="onCloseSizeCatalogDialog"/>
		</endButton>	
	</Dialog>
</core:FragmentDefinition>
