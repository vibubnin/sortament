<mvc:View 
  controllerName="sortament.sortaments.controller.SortamentDetail"
  xmlns:l="sap.ui.layout"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true">
  <Page title="Подробная информация">
		<content>
			<Table 
				id="sortamentTable"
				items="{
					path: 'sortaments>list',
					sorter: {
						path: 'type'
					}
				}"
				alternateRowColors="true"
				mode="MultiSelect"
				class="sortamentTable">
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="{sortaments>name}" level="H3"/>
							<ToolbarSpacer />
							<Button type="Transparent" icon="sap-icon://download" press="onSortamentDownload" />
						</content>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="3rem">
						<Text text="Тип"/>
					</Column>
					<Column>
						<VBox>
							<Text text="h,"/>
							<Text text="мм"/>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<Text text="b,"/>
							<Text text="мм"/>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<Text text="s,"/>
							<Text text="мм"/>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<Text text="t,"/>
							<Text text="мм"/>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<HBox>
								<Text text="r"/>
								<Text class="subscript" text="1"/>
								<Text text=","/>
							</HBox>
							<Text text="мм"/>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<Text text="A,"/>
							<HBox>
								<Text text="см"/>
								<Text class="superscript" text="2"/>
							</HBox>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<Text text="P,"/>
							<HBox>
								<Text text="кг/м"/>
								<Text class="superscript" text="2"/>
							</HBox>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<HBox>
								<Text text="I"/>
								<Text class="subscript" text="y"/>
								<Text text=","/>
							</HBox>
							<HBox>
								<Text text="см"/>
								<Text class="superscript" text="4"/>
							</HBox>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<HBox>
								<Text text="W"/>
								<Text class="subscript" text="y"/>
								<Text text=","/>
							</HBox>
							<HBox>
								<Text text="см"/>
								<Text class="superscript" text="3"/>
							</HBox>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<HBox>
								<Text text="S"/>
								<Text class="subscript" text="y"/>
								<Text text=","/>
							</HBox>
							<HBox>
								<Text text="см"/>
								<Text class="superscript" text="3"/>
							</HBox>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<HBox>
								<Text text="i"/>
								<Text class="subscript" text="y"/>
								<Text text=","/>
							</HBox>
							<Text text="мм"/>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<HBox>
								<Text text="I"/>
								<Text class="subscript" text="z"/>
								<Text text=","/>
							</HBox>
							<HBox>
								<Text text="см"/>
								<Text class="superscript" text="4"/>
							</HBox>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<HBox>
								<Text text="W"/>
								<Text class="subscript" text="z"/>
								<Text text=","/>
							</HBox>
							<HBox>
								<Text text="см"/>
								<Text class="superscript" text="3"/>
							</HBox>
						</VBox>
					</Column>
					<Column>
						<VBox>
							<HBox>
								<Text text="i"/>
								<Text class="subscript" text="z"/>
								<Text text=","/>
							</HBox>
							<Text text="мм"/>
						</VBox>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{sortaments>type}"/>
							<Text text="{sortaments>h}"/>
							<Text text="{sortaments>b}"/>
							<Text text="{sortaments>s}"/>
							<Text text="{sortaments>t}"/>
							<Text text="{sortaments>R1}"/>
							<Text text="{sortaments>A}"/>
							<Text text="{sortaments>P}"/>
							<Text text="{sortaments>Ly}"/>
							<Text text="{sortaments>Wy}"/>
							<Text text="{sortaments>Sy}"/>
							<Text text="{sortaments>Iy}"/>
							<Text text="{sortaments>Lz}"/>
							<Text text="{sortaments>Wz}"/>
							<Text text="{sortaments>Iz}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
  </Page>
</mvc:View>